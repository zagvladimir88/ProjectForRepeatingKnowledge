<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder location="application.properties"/>

    <context:annotation-config/>
    <bean class="org.zagvladimir.bpp.InjectBeanPostProcessor"/>
    <bean class="org.zagvladimir.bpp.TransactionBeanPostProcessor"/>
    <bean class="org.zagvladimir.bpp.AuditingBeanPostProcessor"/>
    <bean class="org.zagvladimir.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="org.zagvladimir.bfpp.VerifyPropertyBeanFactoryPostProcessor"/>
    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>
    <bean id="pool1" name="p1,p2,p3" class="org.zagvladimir.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" value="${db.username}"/>
        <constructor-arg name="poolSize" value="${db.pool.size}"/>
        <constructor-arg name="args">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value="#{driver.substring(3)}"/>
                <entry key="test" value="#{driver.length() > 10}"/>
                <entry key="test1" value="#{driver.length() > T(Math).random() * 10}"/>
                <entry key="host" value="#{'${db.hosts}'.split(',')}"/>
                <entry key="currentUser" value="#{systemProperties['user.name']}"/>
                <entry key="currentUser" value="${user.name}"/>
            </map>
        </property>
    </bean>

    <bean id="companyRepository" class="org.zagvladimir.database.repository.CompanyRepository">
    </bean>
</beans>

